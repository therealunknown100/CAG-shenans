<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Favourite Stations</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="container my-4">
        <h2>Favourite Stations</h2>
        <ul class="list-group">
            <% favouriteStations.forEach(station => { %>
                <li class="list-group-item">
                    <h5><%= station.name %></h5>
                    <p><strong>Language:</strong> <%= station.language %></p>
                    <p><strong>Description:</strong> <%= station.description %></p>
                    <img src="<%= station.image %>" alt="<%= station.name %>" class="img-fluid" style="max-width: 200px;">
                    <div class="btn-group mt-2">
                        <a href="<%= station.streamUrl %>" target="_blank" class="btn btn-secondary me-2">Stream</a>
                        <a href="/editStation/<%= station.id %>" class="btn btn-primary">Edit</a>
                        <form action="/deleteStation/<%= station.id %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger ms-2">Remove from Favourites</button>
                        </form>
                    </div>
                </li>
            <% }) %>
        </ul>
    </div>
</body>
</html>


