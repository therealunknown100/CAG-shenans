<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results - FlexRadioSG</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container mt-4">
        <h2>Search Results for "<%= query %>"</h2>
        <ul class="list-group">
            <% if (searchResults.length > 0) { %>
                <% searchResults.forEach(station => { %>
                    <li class="list-group-item">
                        <h5><%= station.name %></h5>
                        <p><strong>Language:</strong> <%= station.language %></p>
                        <p><strong>Description:</strong> <%= station.description %></p>
                        <img src="<%= station.image %>" alt="<%= station.name %>" class="img-fluid" style="max-width: 200px;">
                        <div class="btn-group mt-2">
                            <a href="/stations/<%= station.id %>" class="btn btn-secondary">Stream</a>
                            <a href="/editStation/<%= station.id %>" class="btn btn-primary ms-2">Edit</a>
                            <form action="/deleteStation/<%= station.id %>" method="POST">
                                <button type="submit" class="btn btn-danger ms-2">Delete</button>
                            </form>
                        </div>
                    </li>
                <% }); %>
            <% } else { %>
                <li class="list-group-item">
                    <p>No results found for "<%= query %>"</p>
                </li>
            <% } %>
        </ul>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
