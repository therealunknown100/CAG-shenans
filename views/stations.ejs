<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Browse Stations</title>
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="container mt-3">
        <h2>Available Stations</h2>
        <div class="list-group">
            <% for(let i = 0;i < stations.length; i++ ) { %>
                <div class="list-group-item list-group-item-action">
                    <h5 class="mb-1"><%= stations[i].name %></h5>
                    <p class="mb-1"><%= stations[i].genre %></p>
                    <form action="/addFavourites" method="POST" class="d-inline">
                        <input type="hidden" name="stationId" value="<%= stations[i].id %>">
                        <button type="submit" class="btn btn-primary">Add to Favourites</button>
                    </form>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>

